{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",          
    "declaration": true,
    "module": "commonjs", 
    "lib": ["es2019", "dom","es6"],
    "allowJs": true,              
    "outDir": "dist/",           
    "sourceRoot": "./src/",
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./workhub"]
}

